<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06A8E1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_welcome"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="178dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:src="@drawable/em_live_logo"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/em_live_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_img"
        android:gravity="center_horizontal|bottom"
        app:layout_constraintVertical_weight="1"
        android:paddingBottom="123dp"
        android:textSize="@dimen/em_size_big"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>